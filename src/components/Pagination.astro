---
// component imports
import AstroLink from "./AstroLink.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
    {
        prevUrl && (
            <AstroLink
                text="Previous"
                href={prevUrl}
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-left-line",
                    side: "left",
                }}
            />
        )
    }
    {
        nextUrl && (
            <AstroLink
                text="Next"
                href={nextUrl}
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-right-line",
                    side: "left",
                }}
            />
        )
    }
</nav>
