---
// component imports
import AstroLink from "../components/AstroLink.astro";
import MainLayout from "../layouts/MainLayout.astro";

// stype import
import "../styles/global.css";
---

<MainLayout title="Page Not Found" description="404 Page">
    <div
        class="container"
        style={{
            display: "grid",
            placeItems: "center",
            textAlign: "center",
            gap: "var(--space-sm)",
        }}
    >
        <div>
            <h1 class="h1">Welp, this is awkward!</h1>
            <p>We seem to have misplaced something...</p>
        </div>
        <AstroLink
            href="/"
            style="secondary"
            text="Go Home"
            icon={{ name: "tabler:home", side: "right" }}
        />
    </div></MainLayout
>
